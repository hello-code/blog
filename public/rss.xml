                <title>Go Cross Compile</title>
                <link>https://example.com/posts/go-cross-compile/</link>
                <guid isPermaLink="true">https://example.com/posts/go-cross-compile/</guid>
                <pubDate>Sat, 17 Oct 2020 09:12:40 &#43;0800</pubDate>
                
